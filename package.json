{
	"name": "@pixelpizza/bot",
	"version": "2.0.0",
	"description": "A bot for ordering and delivering images of food",
	"main": "./dist/index.js",
	"directories": {
		"lib": "src"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"update": "yarn up \"*\" -i",
		"build": "yarn clean && tsup",
		"build:dev": "yarn build && rollup -c scripts/rollup.dev.ts",
		"build:prod": "yarn build && rollup -c scripts/rollup.prod.ts",
		"clean": "node scripts/clean-dist.mjs",
		"lint": "eslint --ext mjs,js,ts --fix",
		"format": "prettier --write **/*.{ts,js,json,yml,yaml}",
		"prepare": "husky install",
		"start:dev": "yarn build:dev && node .",
		"start:prod": "yarn build:prod && node ."
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/PixelPizza/pixelpizza-template.git"
	},
	"keywords": [],
	"author": "Jaron Zijlstra <jaron_zijlstra@outlook.com>",
	"license": "ARR",
	"bugs": {
		"url": "https://github.com/PixelPizza/pixelpizza-template/issues"
	},
	"homepage": "https://github.com/PixelPizza/pixelpizza-template#readme",
	"dependencies": {
		"@devtomio/plugin-botlist": "^1.2.0",
		"@discordjs/builders": "0.15.0",
		"@kaname-png/plugin-env": "^1.1.2",
		"@kaname-png/plugin-statcord": "^2.1.0",
		"@prisma/client": "^4.1.0",
		"@sapphire/decorators": "^6.0.0",
		"@sapphire/framework": "4.0.2",
		"@sapphire/plugin-api": "^5.0.0",
		"@sapphire/plugin-logger": "^3.0.1",
		"@simpledjs/framework": "^0.7.0",
		"common-tags": "^1.8.2",
		"discord.js": "^13.9.0",
		"dotenv": "^16.0.1",
		"ngrok": "^4.3.1",
		"tslib": "^2.4.0"
	},
	"devDependencies": {
		"@commitlint/config-angular": "^17.0.3",
		"@sapphire/eslint-config": "^4.3.8",
		"@sapphire/ts-config": "^3.3.4",
		"@types/common-tags": "^1",
		"@types/eslint": "^8",
		"@types/node": "^17.0.21",
		"@types/prettier": "^2",
		"@types/valid-url": "^1",
		"@typescript-eslint/eslint-plugin": "^5.30.7",
		"@typescript-eslint/parser": "^5.30.7",
		"eslint": "^8.20.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.2.1",
		"husky": "^8.0.1",
		"prettier": "^2.7.1",
		"prisma": "^4.1.0",
		"rollup": "^2.77.0",
		"rollup-plugin-inject-process-env": "^1.3.1",
		"rollup-plugin-uglify": "^6.0.4",
		"tsup": "^6.1.3",
		"typescript": "^4.7.4"
	},
	"packageManager": "yarn@3.2.1"
}
